<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activities.ui.activities.DetailedNewsViewActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/dp_10">

        <ImageView
            android:id="@+id/ivImage1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"/>


        <TextView
            android:id="@+id/tvNewsHeadline"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="This is heading"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="@dimen/sp_30"/>

        <TextView
            android:id="@+id/tvNewsAuthor"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="By Author"
            android:layout_weight="1"
            android:textSize="@dimen/sp_20"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvNewsDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="28/10/1996"
                android:layout_weight="1"
                android:textSize="@dimen/sp_20"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_10"
                android:textColor="@color/black"
                android:text="|"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textSize="@dimen/sp_20"/>

            <TextView
                android:id="@+id/tvNewsLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/theme_red"
                android:text="UK"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textSize="@dimen/sp_20"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tvNewsSubHeadline"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="This is heading"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textSize="@dimen/sp_20"/>

        <ImageView
            android:id="@+id/ivImage2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/tvNewsContent"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Content"
            android:layout_weight="1"
            android:textSize="@dimen/sp_20"/>

    </LinearLayout>

</ScrollView>